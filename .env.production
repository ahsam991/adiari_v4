# ============================================
# ADI ARI FRESH - PRODUCTION CONFIGURATION
# Hostinger Deployment
# ============================================
#
# IMPORTANT: 
# 1. Rename this file to .env
# 2. Replace ALL placeholder values with your actual credentials
# 3. Never commit .env to version control
#
# ============================================

# Application Settings
APP_NAME="ADI ARI Fresh Vegetables & Halal Food"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_TIMEZONE=Asia/Tokyo

# Database Configuration - GROCERY (Main Database)
# Replace u123456789 with your Hostinger database prefix
DB_HOST=localhost
DB_NAME=u123456789_grocery
DB_USER=u123456789_dbuser
DB_PASS=your_hostinger_database_password

# Database Configuration - INVENTORY
DB_INVENTORY_HOST=localhost
DB_INVENTORY_NAME=u123456789_inventory
DB_INVENTORY_USER=u123456789_dbuser
DB_INVENTORY_PASS=your_hostinger_database_password

# Database Configuration - ANALYTICS
DB_ANALYTICS_HOST=localhost
DB_ANALYTICS_NAME=u123456789_analytics
DB_ANALYTICS_USER=u123456789_dbuser
DB_ANALYTICS_PASS=your_hostinger_database_password

# Security Settings
SESSION_LIFETIME=7200
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Lax
CSRF_TOKEN_EXPIRY=3600
BCRYPT_ROUNDS=10

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
UPLOAD_PATH=/public_html/uploads/

# Business Information
STORE_NAME="ADI ARI FRESH VEGETABLES AND HALAL FOOD"
STORE_ADDRESS="114-0031 Higashi Tabata 2-3-1 Otsu building 101"
STORE_PHONE="080-3408-8044"
STORE_EMAIL="info@adiarifresh.com"
STORE_COUNTRY="Japan"
STORE_CURRENCY="JPY"
STORE_TAX_RATE=10

# Email Configuration (Update after setting up email in Hostinger)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=587
MAIL_USERNAME=info@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=info@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Cache Settings
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# Logging
LOG_LEVEL=error
LOG_PATH=/public_html/logs/

# Analytics & Tracking
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# Payment Gateway (Future Integration)
PAYMENT_GATEWAY=stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# Social Media Links
FACEBOOK_URL=
INSTAGRAM_URL=
TWITTER_URL=
WHATSAPP_NUMBER=+81803408-8044

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We are currently performing scheduled maintenance. Please check back soon."

# Performance
ENABLE_CACHING=true
ENABLE_MINIFICATION=true
ENABLE_COMPRESSION=true

# Development Tools (Keep false in production)
ENABLE_PROFILER=false
ENABLE_DEBUG_BAR=false
SHOW_PHP_ERRORS=false
